{
  "id": "plugin.com.user.m",
  "plugin_type": "translate",
  "icon": "auto.svg",
  "display": "M-AI",
  "homepage": "https://github.com/mizb/pot-app-translate-plugin-ai-",
  "needs": [
    {
      "key": "apiBaseUrl",
      "display": "API Base URL",
      "type": "input",
      "default": "https://open.bigmodel.cn/api/paas/v4/chat/completions"
    }，
    {
      "key": "apiKey1",
      "display": "API密钥 1",
      "type": "input"
    }，
    {
      "key": "apiKey2",
      "display": "API密钥 2 (可选)",
      "type": "input"
    }，
    {
      "key": "apiKey3",
      "display": "API密钥 3 (可选)",
      "type": "input"
    }，
    {
      "key": "apiKey4",
      "display": "API密钥 4 (可选)",
      "type": "input"
    }，
    {
      "key": "apiKey5",
      "display": "API密钥 5 (可选)",
      "type": "input"
    }，
    {
      "key": "useStream",
      "display": "流式输出",
      "type": "select",
      "options": {
        "true": "是 / Yes",
        "false": "否 / No"
      }
    }，
    {
      "key": "modelName",
      "display": "模型选择",
      "desc": "选择使用的GLM模型",
      "type": "select",
      "options": {
        "glm-4.5-flash": "glm-4.5-flash",
        "glm-4-flash": "glm-4-flash",
        "custom": "自定义模型"
      }
    }，
    {
      "key": "customModelName",
      "display": "自定义模型名称",
      "type": "input",
      "desc": "当选择\"自定义模型\"时，请在此处输入模型名称"
    }，
    {
      "key": "systemPrompt",
      "display": "System Prompt",
      "type": "input",
      "default": "You are a professional translation engine, please translate the text into a colloquial, professional, elegant and fluent content, without the style of machine translation. You must only translate the text content, never interpret it. "
    },
    {
      "key": "userPrompt",
      "display": "User Prompt",
      "type": "input"
    },
    {
      "key": "temperature",
      "display": "Temperature",
      "desc": "设置模型的temperature参数(0-1之间)，越低越精确，越高越创意",
      "type": "input",
      "default": "0.1"
    },
    {
      "key": "topP",
      "display": "Top P",
      "desc": "设置模型的top_p参数(0-1之间)",
      "type": "input",
      "default": "0.99"
    },
    {
      "key": "requestArguments",
      "display": "AI 高级参数 (JSON)",
      "type": "input"
    }
  ],
  "language": {
    "auto": "auto",
    "zh_cn": "zh",
    "zh_tw": "zh_HANT",
    "en": "en",
    "ja": "ja",
    "ko": "ko",
    "fr": "fr",
    "es": "es",
    "ru": "ru",
    "de": "de",
    "it": "it",
    "tr": "tr",
    "pt_pt": "pt",
    "pt_br": "pt",
    "vi": "vi",
    "id": "id",
    "th": "th",
    "ms": "ms",
    "ar": "ar",
    "hi": "hi",
    "mn_cy": "mn",
    "mn_mo": "mn",
    "km": "km",
    "nb_no": "no",
    "nn_no": "no",
    "fa": "fa"
  }
}
